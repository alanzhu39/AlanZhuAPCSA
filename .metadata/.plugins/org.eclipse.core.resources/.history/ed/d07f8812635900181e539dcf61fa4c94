import java.util.ArrayList;
import java.awt.Color;
import java.awt.Graphics;

public class Bricks {
	private ArrayList<Brick> bricks;
	
	public Bricks()
	{
		bricks = new ArrayList<Brick>();
	}
	
	public void addBrick(Brick b)
	{
		bricks.add(b);
	}
	
	public Brick[] getBrickArray()
	{
		Brick[] brickArray = (Brick[]) bricks.toArray();
		return brickArray;
	}
	
	public void deleteBrick(int index)
	{
		bricks.remove(index);
	}
	
	public void deleteBrick(Brick b)
	{
		bricks.remove(b);
	}
	
	public void addBrick(Brick b, int index)
	{
		bricks.add(index,b);
	}
	
	public void drawBricks(Graphics window)
	{
		for(Brick b : bricks)
		{
			b.draw(window);
		}
	}
	
	public int getLength()
	{
		return bricks.size();
	}
	
	public void populate()
	{
		for(int x = 41; x < 740; x += 100)
		{
			for(int y = 1; y < 40; y += 20)
			{
				Brick b = new Brick(x,y,98,18,Color.GREEN);
				addBrick(b);
			}
		}
		
		for(int x = 41; x < 740; x += 100)
		{
			for(int y = 541; y < 580; y += 20)
			{
				Brick b = new Brick(x,y,98,18,Color.GREEN);
				addBrick(b);
			}
		}
		
		for(int y = 41; y < 540; y += 100)
		{
			for(int x = 1; x < 40; x += 20)
			{
				Brick b = new Brick(x,y,18,98,Color.GREEN);
				addBrick(b);
			}
		}
		
		for(int y = 41; y < 540; y += 100)
		{
			for(int x = 741; x < 780; x += 20)
			{
				Brick b = new Brick(x,y,18,98,Color.GREEN);
				addBrick(b);
			}
		}
	}
}

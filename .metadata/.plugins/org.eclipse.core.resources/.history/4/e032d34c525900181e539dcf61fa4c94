import java.util.ArrayList;
public class Bricks {
	private ArrayList<Brick> bricks;
	
	public Bricks()
	{
		bricks = new ArrayList<Brick>();
	}
	
	public void addBrick(Brick b)
	{
		bricks.add(b);
	}
	
	public void deleteBrick(int index)
	{
		bricks.remove(index);
	}
	
	public void addBrick(Brick b, int index)
	{
		bricks.add(index,b);
	}
}
